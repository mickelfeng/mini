	<domain>domain.com</domain>
	<db>
		<driver>mysqli</driver>
		<master name="master">
			<host>127.0.0.1</host>
			<user>root</user>
			<pass></pass>
			<port>3306</port>
			<dbname>test</dbname>
			<charset>utf8</charset>
