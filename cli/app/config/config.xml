	<router>
		<rule>
			<app>admin</app>
			<class>mini_web_urlrule</class>
			
		</rule>
	</router>
	
	<default>
		<app>admin</app>
		<controller>index</controller>
		<action>test</action>
	</default>
	<error>
		<app>error</app>
		<controller>index</controller>
		<action>404</action>
	</error>
	
